#!/bin/bash
#
# run-backup - calls the backup script and logs outut to logfile.
#

. /usr/local/etc/backup.conf

logrotate /usr/local/etc/backup.logrotate

echo "New run at: `date`">>$ERRFILE
/usr/local/bin/backup >>$LOGFILE 2>>$ERRFILE </dev/null 
echo -e "\n\n" >>$LOGFILE
echo -e "\n\n" >>$ERRFILE
